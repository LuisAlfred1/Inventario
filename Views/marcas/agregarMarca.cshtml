@{
    ViewData["Title"] = "Agregar Marcas";

}

@model Inventario.Models.Marca

<div class="container mt-5">
    <h1 class="mb-4">Agregar Marca</h1>
</div>

<div class="card mb-4 mx-4">
    <div class="card-body">
        <form asp-action="agregarMarca" asp-controller="Marcas" method="post">
            <div class="mb-3">
                <label for="nombreMarca" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nombreMarca" placeholder="Ingrese el nombre de la marca" asp-for="Nombre" />
            </div>
            <div class="mb-3">
                <label for="paisOrigen" class="form-label">Pais de origen</label>
                <input type="text" class="form-control" id="paisOrigen" placeholder="Ingrese el pais de origen" asp-for="PaisOrigen" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Registrar Marca</button>
            </div>
        </form>
    </div>
</div>
