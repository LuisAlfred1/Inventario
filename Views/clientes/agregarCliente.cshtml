@{
    ViewData["Title"] = "Agregar Clientes";

}

@model Inventario.Models.Cliente

<div class="container mt-5">
    <h1 class="mb-4">Agregar Cliente</h1>
</div>

<div class="card mb-4 mx-4">
    <div class="card-body">
        <form asp-action="AgregarCliente" asp-controller="Clientes" method="post">
            <div class="mb-3">
                <label for="nombreCliente" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nombreCliente" placeholder="Ingrese el nombre del cliente" asp-for="Nombre" />
            </div>
            <div class="mb-3">
                <label for="emailCliente" class="form-label">Email</label>
                <input type="email" class="form-control" id="emailCliente" placeholder="Ingrese el email" asp-for="Email" />
            </div>
            <div class="mb-3">
                <label for="telefonoCliente" class="form-label">Teléfono</label>
                <input type="number" class="form-control" id="telefonoCliente" placeholder="Ingrese el teléfono" asp-for="Telefono" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Registrar cliente</button>
            </div>
        </form>
    </div>
</div>
